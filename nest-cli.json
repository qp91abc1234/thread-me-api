{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "generateOptions": {
    "spec": false
  },
  "compilerOptions": {
    "assets": ["**/*.yml"],
    "watchAssets": true,
    "deleteOutDir": true,
    "plugins": [{"name":"@nestjs/swagger", "options": {
      "classValidatorShim": true,
      "introspectComments": true
    }}]
  }
}
